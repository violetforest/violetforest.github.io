white = #fff
light-pink = #ffccff
black = #000

html, body
  position relative
  width 100%
  height 100%

body
  font-family 'VT323', monospace
  font-weight normal
  font-size 20px
  background linear-gradient(30deg, #6a00ef, #ff4aab, #000fff)
  background-size: 300% 300%;
  animation: gradient 30s ease infinite;

  margin 0
  overflow hidden

  background-color light-pink

  .container
    position relative
    padding 2em
    width 60%
    margin auto

  canvas
    position absolute
    top 0
    left 0

  a, button, .sentence
    &:before
      content '>'
      color white
      padding-right 0.2em
      font-size 0.9em

  a, button
    font inherit
    font-weight normal

    text-decoration none
    color white
    z-index 10

  button
    border 0
    padding 0
    text-align left

    line-height normal
    overflow visible
    background none
    cursor pointer

    &:hover
      height 20px !important

  ul
    padding 0
    margin 0

  li
    list-style-type none

  a
  button
  .blink
    border-right .3em solid
    animation blink-caret .5s step-end infinite alternate

    &:hover
      border-bottom 0.05em solid white
      border-right 0
      animation none

  .next-link
    position absolute
    bottom 0
    left calc(100% - 150px)
    font-size 3em

    width 16.5em /* fallback */
    width 5ch /* # of chars */
    margin 0 20px 20px 0
    text-align left
    overflow hidden

    white-space nowrap
    opacity 0.5
    animation typing 2s steps(5, end) /* # of steps = # of chars */

    &:hover
      opacity 0.8

  .divebar
    position relative
    width inherit
    height inherit

    canvas
      position absolute
      top 0
      left 0
      z-index -1

    .video
      z-index 10

    .info
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      padding 1em
      width 580px;

      z-index 100
      color white
      background-color black
      cursor auto

      &-blink
        width 226px
        width 29ch

    .gif
      position relative
      display block
      width 100%
      padding 1em 0

      img
        width 100%

    .gif-square
      display none

  .about
    width 60%
    margin auto
    a
      animation none
      border-right 0
      opacity 0.8

    li
      padding-bottom 0.8em

@keyframes typing { from { width: 0; } }
@keyframes blink-caret { 50% { border-right-color: transparent; } }

@keyframes gradient {
  0%{background-position:48% 0%}
  100%{background-position:53% 100%}
}

@media (max-width: 650px) {
  .info {
    width: 80% !important;
    font-size: 0.9em;
  }
  .gif{
    display: none !important;
  }
  .gif-square {
    display: block !important;
    padding: 1em 0;
  }
  .gif-square img {
    width: 100%;
  }
  div.about {
    width: 80%;
  }
}
